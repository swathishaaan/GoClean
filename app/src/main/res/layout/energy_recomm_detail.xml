            android:fontFamily="sans-serif"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:text="Have 3 cold showers"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
